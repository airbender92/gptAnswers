{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}